import java.util.Scanner;

class Codechef
{
	public static void main (String[] args) 
	{
	 Scanner sc = new Scanner(System.in);
	 int t = sc.nextInt();
	 for(int i=0;i<t;i++)
	 {
	  int n = sc.nextInt();
	  int x = sc.nextInt();
	  int c=0;
	  int a[] = new int[n];
	  int b[] = new int[n];
	  for(int j=0;j<n;j++)
	   a[j] = sc.nextInt();
	  for(int j=0;j<n;j++)
	   b[j] = sc.nextInt();
	  for(int j=0;j<n;j++)
	  {
	   if(a[j]>=x)
	    c += b[j];
	  }
	  System.out.println(c);
	 }
	}
}
